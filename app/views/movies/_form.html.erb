<%= form_with(model: movie, local: true) do |form| %>
  <% if movie.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(movie.errors.count, "error") %> prohibited this movie from being saved:</h2>

      <ul>
      <% movie.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title, id: :movie_title %>
  </div>

  <div class="field">
    <%= form.label :year_released %>
    <%= form.number_field :year_released, id: :movie_year_released %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_area :description, id: :movie_description %>
  </div>
  
  <div class="field">
    <%= form.label :poster_image %>
    <%= form.file_field :poster_image, id: :movie_poster_image %>
  </div>

  <div class="field">
    Remove attachment: <%= form.check_box :remove_poster_image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
